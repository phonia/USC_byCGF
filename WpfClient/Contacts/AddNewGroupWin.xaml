<Window x:Class="WpfClient.Contacts.AddNewGroupWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient.Contacts"
        mc:Ignorable="d"
        Title="添加分组" Height="150" Width="320" WindowStartupLocation="CenterScreen">
    <Grid Background="#ebf2f9">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10"  Text="分组名:" Grid.Column="0"/>
        <TextBox Name="tb_GroupName" Height="30" Margin="10" Grid.Column="1"/>
        <Button Width="80" Grid.Row="1" Grid.Column="1" Name="btn_Confirm" Foreground="White" Height="28" Content="确定" HorizontalAlignment="Right" Margin="0,0,10,0"  VerticalAlignment="Center" Click="btn_Confirm_Click" Template="{DynamicResource ButtonControlTemplate1}"/>


    </Grid>
</Window>
